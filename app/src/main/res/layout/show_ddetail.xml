<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/planame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Name"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/plaphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Phone"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_below="@+id/planame"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/paladdress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Address"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_below="@+id/plaphone"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/palacount"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Total People :-"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_below="@+id/paladdress"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/plano"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="No."
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_below="@+id/paladdress"
            android:layout_toRightOf="@+id/palacount"
            android:layout_marginLeft="10dp"/>


    </RelativeLayout>





</androidx.cardview.widget.CardView>